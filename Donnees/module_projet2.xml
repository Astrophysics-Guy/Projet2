<?xml version="1.0" encoding="UTF-8"?>
<project name="module_projet2" default="compile.module.projet2">
  <dirname property="module.projet2.basedir" file="${ant.file.module_projet2}"/>
  
  <property name="module.jdk.home.projet2" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.projet2" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.projet2" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.projet2" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="projet2.output.dir" value="${module.projet2.basedir}/out/production/Projet2"/>
  <property name="projet2.testoutput.dir" value="${module.projet2.basedir}/out/test/Projet2"/>
  
  <path id="projet2.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="projet2.module.production.classpath">
    <path refid="${module.jdk.classpath.projet2}"/>
  </path>
  
  <path id="projet2.runtime.production.module.classpath">
    <pathelement location="${projet2.output.dir}"/>
  </path>
  
  <path id="projet2.module.classpath">
    <path refid="${module.jdk.classpath.projet2}"/>
    <pathelement location="${projet2.output.dir}"/>
  </path>
  
  <path id="projet2.runtime.module.classpath">
    <pathelement location="${projet2.testoutput.dir}"/>
    <pathelement location="${projet2.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.projet2">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.projet2">
    <patternset refid="excluded.from.module.projet2"/>
  </patternset>
  
  <path id="projet2.module.sourcepath">
    <dirset dir="${module.projet2.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.projet2" depends="compile.module.projet2.production,compile.module.projet2.tests" description="Compile module Projet2"/>
  
  <target name="compile.module.projet2.production" depends="register.custom.compilers" description="Compile module Projet2; production classes">
    <mkdir dir="${projet2.output.dir}"/>
    <javac2 destdir="${projet2.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.projet2}/javac">
      <compilerarg line="${compiler.args.projet2}"/>
      <bootclasspath refid="projet2.module.bootclasspath"/>
      <classpath refid="projet2.module.production.classpath"/>
      <src refid="projet2.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.projet2"/>
    </javac2>
    
    <copy todir="${projet2.output.dir}">
      <fileset dir="${module.projet2.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.projet2.tests" depends="register.custom.compilers,compile.module.projet2.production" description="compile module Projet2; test classes" unless="skip.tests"/>
  
  <target name="clean.module.projet2" description="cleanup module">
    <delete dir="${projet2.output.dir}"/>
    <delete dir="${projet2.testoutput.dir}"/>
  </target>
</project>